@model IEnumerable<Addlete.Models.User>

@{
    ViewData["Title"] = "User List";
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create User</a>
</p>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">User List</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>User Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                            <tr>
                                <td>@user.username</td>
                                <td>
                                @{
                                    string roleString = string.Empty;
                                    switch (user.user_role)
                                    {
                                        case 0:
                                            roleString = "Athlete";
                                            break;
                                        case 1:
                                            roleString = "Coach";
                                            break;
                                        case 2:
                                            roleString = "Admin";
                                            break;
                                        default:
                                            roleString = "Unknown";
                                            break;
                                    }
                                    <text>@roleString</text>
                                }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@user.user_id">Edit</a> |
                                   @* <a asp-action="Details" asp-route-id="@user.user_id">Details</a> |*@
                                    <a asp-action="Delete" asp-route-id="@user.user_id">Delete</a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
