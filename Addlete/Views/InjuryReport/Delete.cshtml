@model Addlete.Models.Injury_Reports

@{
    ViewData["Title"] = "Delete Injury Report";
}

<div class="card-body">
    <h4>Are you sure you want to delete this injury report?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2">Report ID:</dt>
            <dd class="col-sm-10">@Model.report_id</dd>
            <dt class="col-sm-2">Athlete ID:</dt>
            <dd class="col-sm-10">@Model.athlete_id</dd>
            <dt class="col-sm-2">Injury Description:</dt>
            <dd class="col-sm-10">@Model.injury_description</dd>
            <dt class="col-sm-2">Date Reported:</dt>
            <dd class="col-sm-10">@Model.date_reported.ToShortDateString()</dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="report_id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
