@model IEnumerable<Addlete.Models.Injury_Reports>

@{
    ViewData["Title"] = "Injury Reports";
}
 <p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Report ID</th>
                    <th>Athlete Name</th>
                    <th>Injury Description</th>
                    <th>Date Reported</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                        <tr>
                            <td>@report.report_id</td>
                            <td>@report.Athlete.athlete_name</td>
                            <td>@report.injury_description</td>
                            <td>@report.date_reported.ToShortDateString()</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@report.report_id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@report.report_id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@report.report_id">Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
