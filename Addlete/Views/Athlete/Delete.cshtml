@model Addlete.Models.Athlete

@{
    ViewData["Title"] = "Delete Athlete";
}

<div class="card-body">
    <h3>Are you sure you want to delete this athlete?</h3>
    <div>
        <h4>Athlete Name: @Model.athlete_name</h4>
        <h4>Sport: @Model.sport</h4>
        <h4>Coach: @(Model.Coach != null ? Model.Coach.coach_name : "No Coach")</h4>
        <h4>Email: @Model.email</h4>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="athlete_id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
