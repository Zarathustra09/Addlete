@model Addlete.Models.Athlete

@{
    ViewData["Title"] = "Create Athlete";
}



<div class="card-body">
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="athlete_name" class="control-label">Athlete Name</label>
            <input asp-for="athlete_name" class="form-control" />
            <span asp-validation-for="athlete_name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="sport" class="control-label">Sport</label>
            <input asp-for="sport" class="form-control" />
            <span asp-validation-for="sport" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="coach_id" class="control-label">Coach</label>
            <select asp-for="coach_id" class="form-control" asp-items="@((IEnumerable<SelectListItem>)ViewBag.Coaches)">
                <option value="">Select Coach</option>
            </select>
            <span asp-validation-for="coach_id" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="email" class="control-label">Email</label>
            <input asp-for="email" class="form-control" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
